@model CrescentIsland.Website.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
        <h2 class="text-center">@ViewBag.Title</h2>

        <p class="text-success">@ViewBag.StatusMessage</p>
        <div class="row">
            <div class="col-sm-4">
                <img src="@MvcApplication.GetGlobalModel().CurrentUser.AvatarUrl" />
            </div>
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-3">
                        Password:
                    </div>
                    <div class="col-sm-9">
                        @if (Model.HasPassword)
                        {
                            @Html.ActionLink("Change your password", "ChangePassword")
                        }
                        else
                        {
                            @Html.ActionLink("Create", "SetPassword")
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        Email:
                    </div>
                    <div class="col-sm-9">
                        @if (Model.HasVerified)
                        {
                            <text>Your e-mail has been verified</text>
                        }
                        else
                        {
                            using (Html.BeginForm("SendVerification", "Manage", FormMethod.Post, new { id = "sendVerification" }))
                            {
                                @Html.AntiForgeryToken()
                                <text>Your e-mail has not been verified yet.<br /><a href="javascript:document.getElementById('sendVerification').submit()">Re-send verification e-mail</a></text>
                            }
                        }
                    </div>
                </div>
            </div>

        </div>
        <div class="col-xs-2"></div>
    </div>

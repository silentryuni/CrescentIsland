@using CrescentIsland.Website.Models
@using CrescentIsland.Website.Helpers
@model ChangeAvatarViewModel

@{
    ViewBag.Title = "Change Avatar";
}

<div class="row account-avatar-page">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
        @Html.Partial("_ManageMenu")
        @Html.HiddenFor(m => m.HasPassword)

        <h2 class="text-center">@ViewBag.Title</h2>

        <p class="text-success">@ViewBag.StatusMessage</p>

        @using (Html.BeginForm("ChangeAvatar", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row form-row">
                <div class="col-xs-6 current-avatar">
                    Current Avatar:
                    <img src="@(AvatarHelper.GetAvatarUrl(Model.UserAvatarImage, Model.UserAvatarMimeType))" />
                </div>
                <div class="col-xs-6 selected-avatar">
                    Selected Avatar:
                    <img src="@(AvatarHelper.GetAvatarUrl(Model.UserAvatarImage, Model.UserAvatarMimeType))" />
                </div>
            </div>
            <div class="row form-row change-avatar">
                @Html.EditorFor(m => m.Avatars)
                @Html.HiddenFor(m => m.SelectedAvatar)
            </div>
            <div class="row form-row">
                <div class="col-xs-12">
                    <input type="submit" value="Change avatar" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
    <div class="col-xs-2"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

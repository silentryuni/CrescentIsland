        <div class="hide-menu">
            <a href="#">
                <i class="fa fa-angle-left"></i>
            </a>
        </div>

        @if (Request.IsAuthenticated)
        {
            <div class="battle">
                <a href="#">
                    <img src="~/Assets/Images/button-battle.png" />
                </a>
            </div>
            <h3>Stores</h3>
            <ul>
                <li><a href="#">Lucy's General Store</a></li>
                <li><a href="#">Axebeard's Anvil</a></li>
